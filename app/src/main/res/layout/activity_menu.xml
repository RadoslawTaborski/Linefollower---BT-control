<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rados.lf_sterowanie.MenuActivity">

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="230dp"
        android:height="180dp"
        android:elevation="1dp"
        android:onClick="testClick"
        android:text="@string/Test"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnTest"
        android:layout_below="@+id/btnTest"
        android:width="230dp"
        android:height="180dp"
        android:elevation="1dp"
        android:onClick="competitionClick"
        android:text="@string/Competition"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnMotionControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnCompetition"
        android:layout_alignStart="@+id/btnCompetition"
        android:layout_below="@+id/btnCompetition"
        android:width="230dp"
        android:height="180dp"
        android:elevation="1dp"
        android:onClick="motionControlClick"
        android:text="@string/MotionControl"
        android:textSize="15sp" />

</RelativeLayout>
