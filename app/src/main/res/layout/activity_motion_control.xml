<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_motion_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.example.rados.lf_sterowanie.MotionControlActivity">

    <TextView
        android:text="@string/SPEED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSpeed3"
        android:gravity="center"
        android:layout_alignBottom="@+id/sbSpeed3"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="@string/Connection"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="connectClick"
        android:id="@+id/btnConnect3"
        android:height="30dp"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="@string/Start"
        android:height="150dp"
        android:width="300dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/btnConnect3"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:id="@+id/sbSpeed3"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_toEndOf="@+id/tvSpeed3" />

    <ToggleButton
        android:text="R"
        android:height="100dp"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbtnR"
        android:textOff="R OFF"
        android:textOn="R ON"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button" />

</RelativeLayout>
