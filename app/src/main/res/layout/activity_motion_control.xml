<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_motion_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.rados.lf_sterowanie.MotionControlActivity">

    <TextView
        android:text="@string/Speed1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSpeed3"
        android:gravity="center"
        android:layout_alignBaseline="@+id/tbtnR"
        android:layout_alignBottom="@+id/tbtnR"
        android:layout_toEndOf="@+id/tbtnR" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:id="@+id/sbSpeed3"
        android:layout_alignTop="@+id/tvSpeed3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvSpeed3"
        android:progress="1" />

    <Button
        android:text="@string/Start1"
        android:height="150dp"
        android:width="300dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart3"
        android:onClick="startClick"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvValue"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:height="100dp"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tbtnR"
        android:textOff="@string/ROn"
        android:textOn="@string/ROff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnStart3" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvValue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zText"
        android:layout_alignBottom="@+id/btnConnect3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnConnect3" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yText"
        android:layout_alignBaseline="@+id/btnConnect3"
        android:layout_alignBottom="@+id/btnConnect3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnConnect3" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xText"
        android:layout_above="@+id/yText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnConnect3" />

    <Button
        android:text="@string/Connect"
        android:width="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnect3"
        android:height="30dp"
        android:textSize="14sp"
        android:onClick="connectClick"
        android:layout_below="@+id/btnStart3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
